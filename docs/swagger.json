        "/api/v1/tags": {
            "get": {
                "description": "returns all available tags in alphabetical order",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "tags"
                ],
                "summary": "retrieve all tags",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
